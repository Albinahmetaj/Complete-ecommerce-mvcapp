@model HomeViewModel


<partial name="_Carousel" />

<h2>Sales of the week</h2>
<h4>Our weekly selection - just for you!</h4>

<div class="row">

    @foreach (var product in Model.ProductsOfTheWeek)
    {

        <div class="col-sm-4 col-lg-4 col-md-4">
            <div class="thumbnail">
                <img src="~/images/@product.Photopath" style="width:500px; height:550px;" />

                <div class="caption">
                    
                    <h3>
                        <a asp-controller="Product"
                           asp-action="Details"
                           asp-route-productId="@product.ProductId">@product.Titel</a>
                    </h3>
                    <p>@product.ShortDescription</p>
                </div>
               
            </div>
        </div>
    }

</div>