<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro">
    <link href="~/lib/bootstrap/css/bootstrap.css" rel="stylesheet" />
    <script src="~/lib/jquery/jquery.js"></script>
    <script src="~/lib/bootstrap/js/bootstrap.js"></script>
    <link href="~/content/site.css" rel="stylesheet" />
</head>
<body>
    <div class="container">

        <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
            <img class="pull-left" alt="Sinus Skateboards Webshop'" src="~/Images/sinus-logo-symbol-small.png" style="width:100px; height:70px" />
            <form id="searchbar" class="pull-right" asp-controller="Home" asp-action="Search">
                <p>
                    <input type="search" name="searchstring" class="form-control rounded" placeholder="Search" aria-label="Search"/>
                    
                </p>
            </form>
            <div class="container">
                <div class="navbar-header">
                    
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">

                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                </div>

                <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                    <partial name="_LoginPartial" />
                    <ul class="nav navbar-nav">
                        <li><a asp-controller="Home" asp-action="Index">Home</a></li>
                        @await Component.InvokeAsync("CategoryMenu")
                        @await Component.InvokeAsync("ColorMenu")
                        <li><a asp-controller="Contact" asp-action="Index">Contact</a></li>
                        <li><a asp-controller="ShoppingCart" asp-action="Index">Cart</a> @await Component.InvokeAsync("ShoppingCartSummary")</li>


                    </ul>
                </div>
            </div>

        </nav>

        <div class="row">
            <div class="col-md-3">
                <p class="lead">
                    <img class="img-responsive" alt="Sinus Skateboards Webshop'" src="~/Images/sinus-logo-landscape-large.png" style="width:300px; height:100px" />
                </p>
            </div>
            <div class="col-md-9">
                @RenderBody()
            </div>
        </div>
        @RenderSection("Scripts", required: false)
    </div>
</body>
</html>
