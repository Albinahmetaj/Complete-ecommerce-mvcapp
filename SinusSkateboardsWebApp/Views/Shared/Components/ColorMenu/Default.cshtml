@model IEnumerable<ColorCategory>

<li class="dropdown">
    <a asp-controller="Product"
       asp-action=""
       class="dropdown-toggle" data-toggle="dropdown">Colors<b class="caret"></b></a>
    <ul class="dropdown-menu">
        @foreach (var color in Model)
        {
            
                <li>
                    <a asp-controller="Product" asp-action="ColorList"
                       asp-route-color="@color.ColorName">@color.ColorName</a>
                </li>
            
            
        }
        <li class="divider"></li>
        <li>
            <a asp-controller="Product" asp-action="ColorList" asp-route-color="">
                All Products
            </a>
        </li>
    </ul>
</li>