@model TestViewModel


<h2>@Model.Products.Titel - Color: @Model.Products.ColorCategory.ColorName </h2>

<div class="thumbnail">
    <div id="myCarousel" class="carousel slide" data-ride="carousel">
        <!-- Indicators -->
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
        </ol>

        <!-- Wrapper for slides -->
        <div class="carousel-inner">
            <div class="item active">
                <img src="~/Images/@Model.Products.Photopath" alt="" style="width:900px;height:600px;" >
                <div class="carousel-caption">
                    
                </div>
            </div>

            <div class="item">
                <img src="~/Images/@Model.Products.ImageCarouselOne" alt="" style="width:900px;height:600px;">
                <div class="carousel-caption">
                   
                </div>
            </div>

            <div class="item">
                <img src="~/Images/@Model.Products.ImageCarouselTwo" alt="" style="width:900px;height:600px;">
                <div class="carousel-caption">
                    
                </div>
            </div>
        </div>

        <!-- Left and right controls -->
        <a class="left carousel-control" href="#myCarousel" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
    @*<img src="~/Images/@Model.Photopath" style="width:600px;height:700px;"/>*@
<div class="caption-full">
    <h3 class="pull-right">Price: @Model.Products.Price.ToString("c")</h3>
    <h3>
        <a href="#">@Model.Products.Titel</a>
    </h3>
    <h4>@Model.Products.ShortDescription</h4>
    <p>@Model.Products.LongDescription</p>
    <br />
    <br />
    <div class="OtherColors">
        <p class="button pull-right">
            <a class="btn btn-primary" asp-controller="Product" asp-action="List"
               asp-route-category="@Model.Products.Category.CategoryName">Other colors</a>
        </p>
    </div>
    <div class="addToCart">
        <p class="button">
            <a class="btn btn-primary" asp-controller="ShoppingCart" asp-action="AddToShoppingCart"
               asp-route-productId="@Model.Products.ProductId">Add to cart</a>
        </p>
        @*@foreach(var item in Model.Product)
            {
                <h5>@item.Category.CategoryName - @item.ColorCategory.ColorName</h5>
            }*@

    </div>


</div>
</div>